<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_gradient_animation_list"
    tools:context="com.example.jayprakash.memo.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome to EasyMemo"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Simple and a cooler way to handle your Memo's"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

        <Button
            android:id="@+id/homelogin"
            android:layout_width="117dp"
            android:layout_height="37dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:text="@string/text_login"
            android:background="@drawable/color_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/homeregister"
            android:layout_width="117dp"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Register"
            android:background="@drawable/color_button"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>